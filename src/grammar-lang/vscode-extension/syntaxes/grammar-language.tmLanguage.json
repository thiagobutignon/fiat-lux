{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Grammar Language",
  "scopeName": "source.gl",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#operators" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#functions" },
    { "include": "#parameters" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.semicolon.gl",
          "match": ";.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.gl",
          "match": "\\b(define|type|module|import|export|if|let|lambda|match)\\b"
        },
        {
          "name": "constant.language.gl",
          "match": "\\b(true|false|unit|null)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "entity.name.type.gl",
          "match": "\\b(integer|string|boolean|unit|list|record|enum)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.gl",
          "match": "(\\+|\\-|\\*|/|%|=|<|>|<=|>=|->)"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.gl",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.gl",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.gl",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.gl",
          "match": "\\(\\s*(\\w+)",
          "captures": {
            "1": { "name": "entity.name.function.gl" }
          }
        }
      ]
    },
    "parameters": {
      "patterns": [
        {
          "name": "variable.parameter.gl",
          "match": "\\$\\d+"
        }
      ]
    }
  }
}
