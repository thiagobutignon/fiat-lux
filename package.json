{
  "name": "fiat-lux",
  "version": "2.0.0",
  "description": "A Universal Grammar Engine for Structured Data - Generic, configurable grammar validation and auto-repair system",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "demo": "ts-node src/demo.ts",
    "test": "ts-node src/test.ts",
    "test:watch": "nodemon --exec ts-node src/test.ts",
    "build": "tsc",
    "lint": "eslint src/**/*.ts",
    "agi:all": "./scripts/run-agi-demos.sh",
    "agi:adapter": "tsx src/agi-recursive/examples/anthropic-adapter-demo.ts",
    "agi:navigation": "tsx src/agi-recursive/examples/slice-navigation-demo.ts",
    "agi:acl": "tsx src/agi-recursive/examples/acl-protection-demo.ts",
    "agi:homeostasis": "tsx src/agi-recursive/examples/budget-homeostasis.ts",
    "agi:attention": "tsx src/agi-recursive/examples/attention-demo.ts",
    "agi:validate-thesis": "tsx src/agi-recursive/examples/validate-thesis.ts",
    "agi:validate-grammar": "tsx src/agi-recursive/examples/universal-grammar-validation.ts",
    "agi:self-evolution": "tsx src/agi-recursive/demos/self-evolution-demo.ts",
    "agi:visual-debugger": "tsx src/agi-recursive/demos/visual-debugger-demo.ts",
    "agi:social-responsibility": "tsx src/agi-recursive/demos/social-responsibility-demo.ts",
    "agi:new-innovations": "tsx src/agi-recursive/demos/new-innovations-demo.ts",
    "agi:benchmark": "tsx scripts/benchmark/run-agi-benchmark.ts"
  },
  "keywords": [
    "grammar",
    "validation",
    "auto-repair",
    "architecture",
    "clean-architecture",
    "typescript",
    "pattern-validation",
    "levenshtein",
    "jaro-winkler",
    "similarity"
  ],
  "author": "Thiago Butignon",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/thiagobutignon/fiat-lux.git"
  },
  "bugs": {
    "url": "https://github.com/thiagobutignon/fiat-lux/issues"
  },
  "homepage": "https://github.com/thiagobutignon/fiat-lux#readme",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.65.0",
    "@google/generative-ai": "^0.24.1",
    "@xenova/transformers": "^2.17.0",
    "dotenv": "^17.2.3",
    "yaml": "^2.8.1"
  }
}
